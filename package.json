  "dependencies": {
    "@hono/zod-validator": "^0.7.6",
    "@opentui-ui/dialog": "^0.1.2",
    "@opentui-ui/toast": "^0.0.5",
    "@opentui/core": "^0.1.79",
    "@opentui/react": "^0.1.79",
    "hono": "^4.11.9",
    "react": "^19.2.4",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/react": "^19.2.14"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
